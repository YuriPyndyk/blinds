<div class="footer-heading wrapper">
    <div class="footer-nav">
        <ul class="footer-nav__item">
            <li class="footer-nav__title">{{footerNav.titleAbout}}</li>
            {{#each footerNav.about}}
                <li class="footer-nav__link"><a href="">{{this}}</a></li>
            {{/each}}
        </ul>
        <ul class="footer-nav__item">
            <li class="footer-nav__title">{{footerNav.titlePortfolio}}</li>
            {{#each footerNav.portfolio}}
                <li class="footer-nav__link"><a href="">{{this}}</a></li>
            {{/each}}
        </ul>
        <ul class="footer-nav__item">
            <li class="footer-nav__title">{{footerNav.titleAboutBlinds}}</li>
            {{#each footerNav.aboutBlinds}}
                <li class="footer-nav__link"><a href="">{{this}}</a></li>
            {{/each}}
        </ul>
        <ul class="footer-nav__item">
            <li class="footer-nav__title">{{footerNav.titleContact}}</li>
            {{#each footerNav.contact}}
                <li class="footer-nav__link">{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <form class="footer-form">
        <span class="footer-form__title">{{formTitle}}</span>
        <input type="text" class="footer-form__input" placeholder="Имя">
        <input type="text" class="footer-form__input" placeholder="E-mail">
        <a href="#" class="footer-form__send team__order">{{buttonSend}}</a>
    </form>
</div>
<div class="footer-text wrapper">
   <span>{{footerText}}</span>
</div>
<div class="footer-copyright">&#169; 2017</div>